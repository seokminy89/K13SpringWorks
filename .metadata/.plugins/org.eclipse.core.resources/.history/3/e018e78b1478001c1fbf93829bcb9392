package di;


class Persons{
	String name;
	int age;
	
//	public Persons() {
//		//Public 생성자 정의
//	}
	private Persons() {
		//Public 생성자 정의
	}
}
public class DiTest {
	
	/*
	강한결합(독립성 낮음) : new를 통해 직접 객체를 생성한다.
		결합도가 높기 때문에 person클래스의 변화에 직접적인 영향을 받는다.
	*/
	public static void aPerson() {
		Persons persons1 = new Persons();
		persons1.age = 34;
		persons1.name = "성춘향";
	}
	
	/*
	생성자가 private이 되는순간 에러가 발생한다.
	*/
	public static void bPerson(Persons p) {
		p.age = 30;
		p.name = "홍길동";
		
	}
	
	
	
}
